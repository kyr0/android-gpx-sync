<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:scrollbars="vertical"
    tools:context="de.aron_homberg.gpxsync.AddLogEntryActivityFragment">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:id="@+id/saveButton"
        android:enabled="false"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/rotateImageButton"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="MESSAGE"
        android:id="@+id/textView4"
        android:layout_below="@+id/nrEditor"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/messageEditorEn" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/messageEditor"
        android:lines="4"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:minLines="4"
        android:gravity="top|start"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/rotateImageButton"
        android:layout_above="@+id/textView5" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/previewImageView"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/saveButton"
        android:layout_toStartOf="@+id/chooseSnapshotButton"
        android:layout_below="@+id/textView5"
        android:background="#ffefefef" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="SNAPSHOT"
        android:id="@+id/textView5"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHOOSE..."
        android:id="@+id/chooseSnapshotButton"
        android:layout_alignTop="@+id/previewImageView"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ROTATE"
        android:enabled="false"
        android:id="@+id/rotateImageButton"
        android:layout_below="@+id/chooseSnapshotButton"
        android:layout_toEndOf="@+id/previewImageView" />


</RelativeLayout>
