<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:scrollbars="vertical"
    tools:context="de.aron_homberg.gpxsync.AddLogEntryActivityFragment">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:id="@+id/saveButton"
        android:enabled="false"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/previewImageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="DAY"
        android:id="@+id/textView3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/nrEditor"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/saveButton"
        android:layout_alignEnd="@+id/timeLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="MESSAGE"
        android:id="@+id/textView4"
        android:layout_below="@+id/nrEditor"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/messageEditorEn" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/messageEditor"
        android:lines="4"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:minLines="4"
        android:gravity="top|start"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView6"
        android:layout_alignBottom="@+id/messageEditorEn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="SNAPSHOT"
        android:id="@+id/textView5"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHOOSE..."
        android:id="@+id/chooseSnapshotButton"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/previewImageView"
        android:layout_below="@+id/button" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/previewImageView"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/saveButton"
        android:layout_toStartOf="@+id/chooseSnapshotButton"
        android:layout_below="@+id/textView5"
        android:background="#ffefefef" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="DATE &amp; TIME"
        android:id="@+id/timeLabel"
        android:layout_below="@+id/messageEditor" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dateTimeEditor"
        android:layout_below="@+id/timeLabel"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/chooseSnapshotButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="ORIGIN"
        android:id="@+id/textView7"
        android:layout_below="@+id/dateTimeEditor"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/originEditor"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/chooseSnapshotButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="TYPE OF MSG"
        android:id="@+id/textView6"
        android:layout_above="@+id/nrEditor"
        android:layout_alignTop="@+id/textView3"
        android:layout_toEndOf="@+id/nrEditor" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/textView6"
        android:layout_toEndOf="@+id/nrEditor"
        android:id="@+id/radioTypes"
        android:layout_alignBottom="@+id/nrEditor">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PIC  "
            android:id="@+id/radioPic" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CAMP  "
            android:id="@+id/radioCamp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOG"
            android:id="@+id/radioLog" />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="MESSAGE EN"
        android:id="@+id/textView8"
        android:layout_below="@+id/radioTypes"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:inputType="textMultiLine"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:ems="10"
        android:id="@+id/messageEditorEn"
        android:lines="4"
        android:minLines="4"
        android:gravity="top|start"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:layout_below="@+id/textView8"
        android:layout_alignEnd="@+id/radioTypes"
        android:layout_toEndOf="@+id/messageEditor" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ROTATE"
        android:enabled="false"
        android:id="@+id/rotateImageButton"
        android:layout_alignTop="@+id/textView5"
        android:layout_toEndOf="@+id/previewImageView" />


</RelativeLayout>
